{% extends "::base.html.twig" %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/bootstrap_paperv3.3.2.min.css')}}" />
    <link rel="stylesheet" href="{{asset('css/cs-login.css')}}" />
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row-fluid user-row">
                            <center><h2 style="text-shadow: 0.1em 0.1em 0.1em #BBBBBB">CBO</h2></center>
                            <center><h4 style="text-shadow: 0.1em 0.1em 0.1em #BBBBBB">MBCRÉDITO</h4></center>
                        </div>
                    </div>
                    <div class="panel-body">
                        {% for label, flashes in app.session.flashbag.all %}
                            {% for flash in flashes %}
                                <div class="alert alert-dismissable alert-{{ label }}">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    {{ flash }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        <form accept-charset="UTF-8" role="form" class="form-signin" method="post" action="{{ path('logar') }}">
                            <fieldset>
                                <label class="panel-login">
                                    <div class="login_result"></div>
                                </label>
                                <input type="text" class="form-control username" name="username" value="" placeholder="Login" required="" autofocus="">
                                <input type="password" class="form-control" name="password" placeholder="Senha" required="">
                                <br/>
                                <input class="btn btn-lg btn-primary btn-block" type="submit" id="Logar" value="Logar">
                            </fieldset>
                        </form>
                    </div>
                    <center><p style="margin-top: 10px; font-size: 12px;">Desenvolcido por</p></center>
                    <center><p style="margin-top: -6px;">&copy; Company <b>Serbinário</b></p></center>
                </div>
            </div>
        </div>            
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{asset('js/jquery.js')}}"></script>
    <!-- Include all JavaScripts, compiled by Assetic -->
    <script type="text/javascript" src="{{asset('js/bootstrap.js')}}"></script>
    <script type="text/javascript" src="{{asset('js/bootstrap3-typeahead.js')}}"></script>
    <script type="text/javascript" src="{{asset('js/js-login.js')}}"></script>
    <script type="text/javascript" src="{{asset('js/TweenLite.min.js')}}"></script>
{% endblock %}
