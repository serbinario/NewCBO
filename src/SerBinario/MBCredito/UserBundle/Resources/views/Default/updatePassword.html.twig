{% extends "::base.html.twig" %}

{% block body %}
    {{ parent() }}
    <div class="container">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-dismissable alert-{{ label }}">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row clearfix">
            <br />
            <legend>Alteração da senha do usuário</legend>
            <div class="col-md-13 column">
                {{ form_start(form, { 'style': 'horizontal' }) }}
                    {{ form_row(form.password) }}
                    <div class="hidden">
                        {{ form_widget(form.username) }}
                        {{ form_widget(form.email) }}
                        {{ form_widget(form.roles) }}
                        {{ form_widget(form.operador) }}
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}     
    {{ parent() }}
    <script type="text/javascript" language="javascript" class="init">
        $("#serbinario_mbcredito_userbundle_user_actions_voltar").click(function() {
            javascript:history.go(-1);
        });
    </script>
{% endblock %}